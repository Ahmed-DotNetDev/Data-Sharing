@model FileSharingAPP.Models.RegisterViewModel
@inject IViewLocalizer localizer;
@{
	ViewData["Title"] = @localizer["Title"];
}
<hr />
<section id="mu-contact">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="mu-contact-area" style="padding-top:0px">
					<!-- Title -->
					<div class="row">
						<div class="col-md-12">
							<div class="mu-title">
								<h2>@localizer["RegisterHeader"]</h2>
							</div>
						</div>
					</div>
					<!-- Start Contact Content -->
					<div class="mu-contact-content">
						<div class="row">

							<div class="col-md-12">
								<div class="mu-contact-form-area">
									<div id="form-messages"></div>
									<form asp-action="Register">
										<div class="form-group text-danger">
											<input asp-for="Email" type="email" class="form-control" placeholder=@localizer["UserEmail"] required>
											<span asp-validation-for="Email"></span>
										</div>
										<div class="form-group text-danger">
											<input asp-for="Password" type="password" class="form-control" placeholder=@localizer["UserPassword"] required>
											<span asp-validation-for="Password"></span>
										</div>
										<div class="form-group text-danger">
											<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder=@localizer["UserConfirmPassword"] required>
											<span asp-validation-for="ConfirmPassword" ></span>
										</div>
										<button type="submit" class="mu-send-msg-btn"><span>@localizer["Registerbtn"]</span></button>
									</form>
								</div>
							</div>
						</div>
					</div>
					<!-- End Contact Content -->
				</div>
			</div>
		</div>
	</div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
