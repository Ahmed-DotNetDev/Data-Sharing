@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
 <h2 class="text-center text-monospace text-primary">Search Files</h2>
   <div class="row justify-content-center m-4">
       <div class="col-md-8">
           <form asp-controller="Uploads" asp-action="Results"> 
            <div class="input-group mb-3">
                <input type="text" class="form-control form-control-lg" name="Term" placeholder="File Name" aria-label="File Name" aria-describedby="basic-addon2" required>
                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </div>
            </div>
            </form>
       </div>
   </div>
   <div class="col-md-12">
       <h2 class="text-center text-monospace text-primary">Popular Downloaded</h2><br />
      
        <table class="table table-dark rounded text-center">
            <tbody>
                @foreach (UploadViewModel item in ViewBag.Popular)
                {
                    <tr>
                        <td>
                            <img src="/Uploads/@item.FileName" alt="Photo file" class="img-thumbnail" width="70" height="70" style="border:2px solid green;"  />
                        </td>
                        <td>
                             @Html.DisplayFor(modelItem=>item.OriginalName)
                        </td>
                        <td>
                            <span class="text-info">Downloads : </span>@Html.DisplayFor(modelItem=>item.DownloadCount)
                            @if (item.DownloadCount > 6)
                            {
                                <i class="fa-solid fa-star"></i>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
   </div>
</div>