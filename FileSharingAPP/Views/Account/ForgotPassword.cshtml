@model FileSharingAPP.Models.ForgotPasswordViewMOdel
@inject IViewLocalizer localizer;
@{
	ViewData["Title"] = @localizer["Title"];
}
<hr />

<section id="mu-contact">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="mu-contact-area" style="padding-top:0px">
					<!-- Title -->
					<div class="row">
						<div class="col-md-12">
							<div class="mu-title">
								<h2>@localizer["LoginHeader"]</h2>
							</div>
						</div>
					</div>
					<!-- Start Contact Content -->
					<div class="mu-contact-content">
						<div class="row">
							<div class="col-md-12">
								<div class="mu-contact-form-area">
									<div id="form-messages"></div>
									<form asp-action="ForgotPassword" asp-controller="Account" method="post" id="contact">
										<div asp-validation-summary="ModelOnly" class="text-danger"></div>
										<div class="form-group text-danger">
											<input asp-for="Email" type="email" class="form-control" placeholder=@localizer["UserEmail"] required>
											<span asp-validation-for="Email"></span>
										</div>
										<button type="submit" class="mu-send-msg-btn"><span>@localizer["Loginbtn"]</span></button>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}